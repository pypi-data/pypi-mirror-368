# Include the README
include README.md

# Include the license file
include LICENSE

# Include configuration files
include pyproject.toml
include setup.py

# Include package data
recursive-include onecite *.json
recursive-include onecite *.yaml
recursive-include onecite *.yml
recursive-include onecite *.txt

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.egg-info

# Include tests (optional, for source distribution)
recursive-include tests *.py

# Exclude build artifacts
global-exclude build
global-exclude dist
