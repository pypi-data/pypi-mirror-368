{
  "_comment": "MCP ImageUtils Configuration Example",
  "_description": "Copy this file to mcp-imgutils.json and customize the values",
  
  "debug": false,
  "log_level": "INFO",
  "timeout": 60,
  "max_retries": 3,
  "image_save_dir": "~/Pictures/AI_Generated",
  
  "bfl": {
    "_comment": "Black Forest Labs FLUX configuration",
    "api_key": "your-bfl-api-key-here",
    "base_url": "https://api.bfl.ai/v1",
    "image_save_dir": "~/Pictures/BFL_Generated",
    "default_model": "flux-dev",
    "timeout": 120
  },
  
  "openai": {
    "_comment": "OpenAI DALL-E configuration (for future use)",
    "api_key": "your-openai-api-key-here",
    "base_url": "https://api.openai.com/v1",
    "default_model": "dall-e-3",
    "timeout": 60
  },
  
  "stability": {
    "_comment": "Stability AI configuration (for future use)",
    "api_key": "your-stability-api-key-here",
    "base_url": "https://api.stability.ai",
    "timeout": 90
  },
  
  "logging": {
    "_comment": "Logging configuration",
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": null
  },
  
  "cache": {
    "_comment": "Caching configuration (for future use)",
    "enabled": true,
    "ttl": 3600,
    "max_size": 100
  },
  
  "security": {
    "_comment": "Security settings",
    "validate_urls": true,
    "allowed_domains": [
      "api.bfl.ai",
      "api.openai.com", 
      "api.stability.ai"
    ]
  }
}
