# libadic Source Distribution Manifest
# This file specifies which files to include when creating source distributions

# Core build files
include CMakeLists.txt
include setup.py
include pyproject.toml
include LICENSE
include README.md
include CHANGELOG.md

# Documentation
include docs/API_REFERENCE.md
include docs/USER_GUIDE.md
include docs/MATHEMATICAL_REFERENCE.md
include PYTHON_CRYPTO_API.md
recursive-include docs *.md *.rst *.txt

# Source code
recursive-include src *.cpp *.c
recursive-include include *.h *.hpp
recursive-include python/src *.cpp *.c

# Python package
recursive-include python/libadic *.py
recursive-include python/tests *.py
recursive-include python/examples *.py

# Examples and demonstrations
recursive-include examples *.py *.cpp
include examples/padic_crypto_demo.py
include examples/elliptic_curves_demo.py
include examples/bsd_verification.py

# CMake configuration
recursive-include cmake *.cmake *.cmake.in
include extern/pybind11/CMakeLists.txt
recursive-include extern/pybind11/include *.h *.hpp
recursive-include extern/pybind11/tools *.cmake

# Testing files (for development)
recursive-include tests *.cpp *.py
recursive-include python/tests *.py

# Build configuration
include scripts/build.sh
include scripts/run_all_tests.sh

# Documentation and validation
include docs/validation/run_validation.sh
recursive-include docs/validation *.cpp *.py *.md
include VALIDATION_REPORT.md
include SECURITY_ANALYSIS.md

# Exclude build artifacts and temporary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude *.o
global-exclude *.a
global-exclude build/*
global-exclude dist/*
global-exclude .git/*
global-exclude .venv/*
global-exclude *.egg-info/*
global-exclude CMakeCache.txt
global-exclude CMakeFiles/*
global-exclude cmake_install.cmake
global-exclude Makefile
global-exclude *.swp
global-exclude *.swo
global-exclude *~
global-exclude .DS_Store

# Exclude test executables and debugging files
exclude test_*
exclude debug_*
exclude benchmark_*
exclude verify_*
exclude aggressive_*
exclude compute_*
exclude minimal_*
exclude quick_*
exclude high_*
exclude *.csv
exclude output.txt