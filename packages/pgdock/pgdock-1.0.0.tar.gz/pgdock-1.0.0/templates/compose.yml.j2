version: '3.8'

services:
  {{ service_name }}:
    image: postgres:{{ version }}
    container_name: {{ container_name }}
    environment:
      POSTGRES_USER: {{ user }}
      POSTGRES_PASSWORD: {{ password }}
      POSTGRES_DB: {{ db_name }}
    ports:
      - "{{ port }}:5432"
    volumes:
      - {{ volume_name }}:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ user }} -d {{ db_name }}"]
      interval: 5s
      timeout: 5s
      retries: 10
      start_period: 30s
    restart: unless-stopped

volumes:
  {{ volume_name }}:
    name: {{ volume_name }}