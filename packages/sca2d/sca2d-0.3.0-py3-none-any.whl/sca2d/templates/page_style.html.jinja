<style>

  :root {
    --sidebar-width: 220px;
    --sidebar-color: #ddd;
    --sidebar-highlight: #bbb;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: sans-serif;
    background-color: #f9f9f9;
    display: flex;
    justify-content: center;
  }

  #content {
    width: 100%;
    max-width: 1000px;
    padding: 2rem;
    box-sizing: border-box;
    margin-left: var(--sidebar-width);
  }

  .menu-icon {
    display: none;
    font-size: 2rem;
    padding: 1rem;
    cursor: pointer;
    background: var(--sidebar-color);
    color: #333;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1001;
  }

  .sidebar {
    background-color: var(--sidebar-color);
    color: #333;
    width: var(--sidebar-width);
    padding-top: 4rem;
    padding-left: 1rem;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    transition: transform 0.3s ease-in-out;
    z-index: 1000;
    overflow-y: scroll;
  }

  h1 > a,
  h2 > a,
  h3 > a,
  h4 > a,
  h5 > a,
  h6 > a {
    color: inherit;
    text-decoration: none;
  }

  h1 > a:hover,
  h2 > a:hover,
  h3 > a:hover,
  h4 > a:hover,
  h5 > a:hover,
  h6 > a:hover {
    text-decoration: underline;
  }

  .sidebar .active-nav{
     background: var(--sidebar-highlight);
  }

  .sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .sidebar ul li a {
    display: block;
    padding: 1rem;
    color: #333;
    font-weight: 600;
    text-decoration: none;
  }

  .sidebar ul li a:hover {
    background-color: var(--sidebar-highlight);
  }


  .title h1 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .title h2 {
    text-align: center;
    font-size: 2rem;
    margin-bottom: 2rem;
  }

  .file-docs {
    font-size: 1.3rem;
    background-color: #ffffff;
    padding: 1rem 1.5rem;
    margin-bottom: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.05);
    color: #333;
    line-height: 1.6;
  }

  .definition-block {
    margin-bottom: 2rem;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    background-color: white;
  }

  .definition-head {
    background-color: #feffad;
    padding: .3rem;
    font-size: 1.2rem;
    overflow-x: auto;
    white-space: nowrap;
  }

  .definition-head pre {
    margin: 0;
    padding: 1rem;
    line-height: 1.1;
    min-width: 100%;
  }

  .definition-docs {
    padding: .6rem;
    line-height: 1.6;
    color: #333;
  }

  .source-view{
    padding: .6rem;
  }

  .source-view summary{
    font-size: small;
    color: #22f;
  }

  .arg-definition, .assert-info, .return-info {
    padding: .5rem;
  }

  .arg-definition {
    background-color: #ffffec;
  }

  .assert-info {
    background-color: #ffecec;
  }

  .return-info {
    background-color: #ecffec;
  }

  .arg-name, .assert-heading, .return-heading {
    font-weight: bold;
    font-size: 1.1rem;
    padding-right: 1ex;
  }

  .main-index {
    list-style: none;
    padding: 2rem;
    margin: 0 auto;
    max-width: 600px;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .main-index li {
    background-color: #fff;
    border: 1px solid #e3e3e3;
    border-radius: 12px;
    transition: background 0.2s ease, transform 0.1s ease;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  }

  .main-index li:hover {
    background-color: #f0f0f0;
    transform: translateY(-2px);
  }

  .main-index a {
    display: block;
    padding: 1rem 1.5rem;
    color: #333;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
  }

  .main-index a:hover {
    color: #22f;
  }

  @media (max-width: 800px) {
    .menu-icon {
      display: block;
    }

    .sidebar {
      transform: translateX(-100%);
    }

    #nav-toggle:checked ~ .sidebar {
      transform: translateX(0);
    }

    #nav-toggle:checked + .menu-icon::before {
      content: "\2715";
    }

    .menu-icon::before {
      content: "\2630";
    }

    #content {
      margin-left: 0;
      padding: 1.5rem;
    }

    .definition-head {
      font-size: 1.0rem;
      padding: 0.8rem;
    }

    .definition-docs {
      padding: 0.8rem;
    }

    .arg-name, .assert-heading, .return-heading {
      font-size: 1.0rem;
    }
  }
  
</style>