<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <setting id="eu_service" position="after">
                <setting
                    help="If this checkbox is ticked, you will enable the Netherlands Tax Invoice Basis (Factuurstelsel)."
                    company_dependent="1"
                >
                    <field name="l10n_nl_tax_invoice_basis" />
                </setting>
            </setting>
            <xpath expr="//setting[@id='tax_exigibility']" position="attributes">
                <attribute name="invisible">l10n_nl_tax_invoice_basis</attribute>
            </xpath>
        </field>
    </record>
</odoo>
