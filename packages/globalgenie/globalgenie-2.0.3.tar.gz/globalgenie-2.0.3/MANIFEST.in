# GlobalGenie PyPI Distribution Manifest
# This file specifies which non-Python files to include in the distribution

# Include essential documentation files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md

# Include configuration files
include pyproject.toml
include requirements.txt

# Include package metadata
include globalgenie/py.typed

# Include all Python files (default behavior, but explicit)
recursive-include globalgenie *.py
recursive-include globalgenie *.pyi

# Include data files and templates
recursive-include globalgenie *.json
recursive-include globalgenie *.yaml
recursive-include globalgenie *.yml
recursive-include globalgenie *.toml
recursive-include globalgenie *.txt
recursive-include globalgenie *.md

# Include CLI and script files
recursive-include globalgenie/cli *.py
recursive-include globalgenie/scripts *.py

# Include tool configurations
recursive-include globalgenie/tools *.json
recursive-include globalgenie/tools *.yaml
recursive-include globalgenie/tools *.yml

# Include model configurations
recursive-include globalgenie/models *.json
recursive-include globalgenie/models *.yaml
recursive-include globalgenie/models *.yml

# Include example configurations
recursive-include globalgenie/examples *.py
recursive-include globalgenie/examples *.json
recursive-include globalgenie/examples *.yaml
recursive-include globalgenie/examples *.yml
recursive-include globalgenie/examples *.md

# Exclude development and testing files
exclude tests/*
exclude scripts/*
exclude .pytest_cache/*
exclude .mypy_cache/*
exclude .ruff_cache/*
exclude __pycache__/*
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.pyo
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude * *.log

# Exclude IDE and editor files
exclude .vscode/*
exclude .idea/*
exclude *.swp
exclude *.swo
exclude *~

# Exclude build artifacts
exclude build/*
exclude dist/*
exclude *.egg-info/*
exclude .coverage
exclude coverage.xml
exclude .tox/*

# Exclude development configuration
exclude .env
exclude .env.*
exclude docker-compose.yml
exclude Dockerfile*
exclude .dockerignore