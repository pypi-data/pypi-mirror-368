{
    "version": "2.0.0",
    "tasks": [
        /* ------------------------------------------------------------------
         *  helper tasks (call individual make targets)
         * -----------------------------------------------------------------*/
        {
            "label": "make: bump",
            "type": "shell",
            "command": "make",
            "args": [
                "bump"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "make: build",
            "type": "shell",
            "command": "make",
            "args": [
                "build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "make: inspect",
            "type": "shell",
            "command": "make",
            "args": [
                "inspect"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "make: publish",
            "type": "shell",
            "command": "make",
            "args": [
                "publish"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        /* ------------------------------------------------------------------
         *  one-click release: bump → build → inspect → publish
         * -----------------------------------------------------------------*/
        {
            "label": "make: [PyPI] full release",
            "dependsOrder": "sequence", // run in listed order
            "dependsOn": [
                "make: bump",
                "make: build",
                "make: inspect",
                "make: publish"
            ],
            "problemMatcher": []
        },
        {
            "label": "docker: build",
            "type": "shell",
            "command": "make",
            "args": [
                "docker_build"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "docker: push",
            "type": "shell",
            "command": "make",
            "args": [
                "docker_push"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ]
}