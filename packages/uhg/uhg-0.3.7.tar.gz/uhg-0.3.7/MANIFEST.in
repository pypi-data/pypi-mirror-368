include LICENSE
include README.md
include CHANGELOG.md
include pyproject.toml
include setup.cfg
include requirements.txt

# Package data
recursive-include uhg *.py
recursive-include uhg *.pyi
recursive-include uhg py.typed

# Exclude non-library content from distributions
prune examples
prune tests
prune benchmarks
prune use_cases

# Global excludes
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .git
global-exclude .ipynb_checkpoints
global-exclude .DS_Store
global-exclude __pycache__
global-exclude .coverage
global-exclude *.sh
global-exclude Miniconda3-latest-MacOSX-arm64.sh
global-exclude UHG.pdf
global-exclude UHG pictorial.pdf
global-exclude *.log
global-exclude .pytest_cache
global-exclude .tox
global-exclude .venv
global-exclude build
global-exclude dist