<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field
            name="inherit_id"
            ref="purchase_sale_inter_company.res_config_settings_view_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='intercompany_sale_user_id']" position='before'>
                <label
                    string="Sync picking"
                    class="o_light_label mr8"
                    for="sync_picking"
                />
                <field name="sync_picking" />
                <br />
                <label
                    string="On sync picking failure"
                    class="o_light_label mr8"
                    for="sync_picking_failure_action"
                />
                <field name="sync_picking_failure_action" />
                <br />
                <label
                    for="notify_user_id"
                    class="o_light_label mr8"
                    invisible="sync_picking_failure_action != 'notify'"
                />
                <field
                    name="notify_user_id"
                    invisible="sync_picking_failure_action != 'notify'"
                    required="sync_picking_failure_action == 'notify'"
                />
                <br />
                <label
                    string="Block PO manual picking validation"
                    class="o_light_label mr8"
                    for="block_po_manual_picking_validation"
                />
                <field name="block_po_manual_picking_validation" />
                <br />
                <label for="warehouse_id" class="o_light_label mr8" />
                <field
                    name="warehouse_id"
                    required="so_from_po"
                    domain="[('company_id', '=', company_id)]"
                />
            </xpath>
        </field>
    </record>
</odoo>
