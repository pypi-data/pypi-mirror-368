# MANIFEST.in â€” Layker

# ---- Top-level docs (ship with sdist) ----
include README.md
include LICENSE
include TREE.txt
include FLOW.txt

# ---- Project metadata ----
include pyproject.toml
include requirements.txt

# ---- Runtime package data (YAMLs) ----
recursive-include src/layker/resources *.yaml

# ---- Optional: examples & tests in sdist ----
recursive-include examples *.py
recursive-include examples *.yaml
recursive-include tests *.py

# ---- Prune non-essential folders from sdist ----
prune .github
prune .venv
prune .idea
prune .pytest_cache
prune build
prune dist

# ---- Ignore compiled/junk files ----
global-exclude *.py[cod] __pycache__ *.so *.dylib