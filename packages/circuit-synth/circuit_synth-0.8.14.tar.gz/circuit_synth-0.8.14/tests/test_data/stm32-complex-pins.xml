<?xml version="1.0" encoding="UTF-8"?>
<!-- Complex STM32 pin configuration for advanced testing -->
<device>
    <device family="g0" name="stm32g071rb" type="stm32g071rbt6"/>
    <driver name="gpio">
        <!-- Pins with multiple functions on same AF -->
        <gpio port="A" pin="5">
            <signal driver="spi" instance="1" name="sck" af="5"/>
            <signal driver="tim" instance="2" name="ch1" af="1"/>
            <signal driver="i2c" instance="2" name="scl" af="6"/>
            <signal driver="adc" instance="1" name="in5"/>
        </gpio>
        
        <!-- Pins with device constraints -->
        <gpio port="B" pin="8">
            <signal driver="i2c" instance="1" name="scl" af="6" device-pin="48" device-variant="lqfp48,lqfp64"/>
            <signal driver="tim" instance="16" name="ch1" af="2"/>
        </gpio>
        
        <!-- Multiple peripheral instances -->
        <gpio port="A" pin="9">
            <signal driver="usart" instance="1" name="tx" af="7"/>
            <signal driver="i2c" instance="1" name="scl" af="6"/>
            <signal driver="tim" instance="1" name="ch2" af="2"/>
        </gpio>
        <gpio port="A" pin="10">
            <signal driver="usart" instance="1" name="rx" af="7"/>
            <signal driver="i2c" instance="1" name="sda" af="6"/>
            <signal driver="tim" instance="1" name="ch3" af="2"/>
        </gpio>
        
        <!-- DAC pins -->
        <gpio port="A" pin="4">
            <signal driver="dac" instance="1" name="out1"/>
            <signal driver="spi" instance="1" name="nss" af="5"/>
            <signal driver="usart" instance="2" name="ck" af="7"/>
        </gpio>
        
        <!-- Conflicting peripherals -->
        <gpio port="B" pin="3">
            <signal driver="spi" instance="1" name="sck" af="5"/>
            <signal driver="spi" instance="3" name="sck" af="6"/>
            <signal driver="tim" instance="2" name="ch2" af="1"/>
        </gpio>
        
        <!-- Special function pins -->
        <gpio port="H" pin="0">
            <signal driver="osc" name="in"/>
        </gpio>
        <gpio port="H" pin="1">
            <signal driver="osc" name="out"/>
        </gpio>
        
        <!-- Power pins -->
        <gpio port="V" pin="0">
            <signal driver="power" name="vdd"/>
        </gpio>
        <gpio port="V" pin="1">
            <signal driver="power" name="vss"/>
        </gpio>
    </driver>
</device>