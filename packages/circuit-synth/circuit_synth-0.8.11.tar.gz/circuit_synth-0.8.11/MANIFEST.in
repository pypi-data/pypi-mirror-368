# MANIFEST.in - Controls what files are included in the source distribution

# Include documentation
include README.md
include LICENSE
include pyproject.toml
include CLAUDE.md

# Include all Python source files
recursive-include src *.py

# Include data files and templates
recursive-include src/circuit_synth/data *
recursive-include src/circuit_synth *.json *.yaml *.yml *.md

# Include examples
recursive-include examples *.py *.md
recursive-exclude examples *_generated
recursive-exclude examples *_output

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include knowledge base
recursive-include knowledge_base *.json

# Include test data (but not test outputs)
recursive-include tests *.py *.json *.xml
recursive-exclude tests test_output
recursive-exclude tests *_generated

# Exclude build artifacts and caches
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *~
global-exclude *.swp
global-exclude .DS_Store

# Exclude version control
recursive-exclude * .git
recursive-exclude * .gitignore
recursive-exclude * .gitmodules

# IMPORTANT: Exclude platform-specific Rust binaries
# These are not portable across platforms
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll
global-exclude *.pyd

# Exclude Rust build artifacts and symlinks
recursive-exclude rust_modules target
recursive-exclude rust_modules Cargo.lock
recursive-exclude rust_modules *.rlib
recursive-exclude src rust_core_circuit_engine
recursive-exclude src rust_force_directed_placement
recursive-exclude src rust_netlist_processor
recursive-exclude src rust_symbol_cache
recursive-exclude src rust_symbol_search

# Exclude development and CI files
exclude .pre-commit-config.yaml
exclude .readthedocs.yaml
recursive-exclude .github *
recursive-exclude .venv *

# Exclude local build directories
exclude build
exclude dist
exclude *.egg-info