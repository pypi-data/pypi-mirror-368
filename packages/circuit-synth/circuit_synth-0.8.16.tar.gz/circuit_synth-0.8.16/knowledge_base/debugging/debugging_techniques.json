{
  "debugging_techniques": {
    "power_supply_debugging": {
      "no_output": {
        "systematic_approach": [
          {
            "step": 1,
            "action": "Check input power",
            "details": "Verify AC/DC input voltage present and within spec",
            "tools": ["Multimeter"],
            "safety": "Use isolation transformer for mains-powered supplies"
          },
          {
            "step": 2,
            "action": "Inspect fuse",
            "details": "Check if fuse is blown. Blown fuse indicates downstream short",
            "tools": ["Multimeter continuity"],
            "note": "Don't replace fuse until short is found"
          },
          {
            "step": 3,
            "action": "Light bulb trick",
            "details": "Replace fuse with 60-100W incandescent bulb as current limiter",
            "expected": "Bulb should flash briefly then glow dimly if normal",
            "fault": "Bright glow indicates persistent short circuit"
          },
          {
            "step": 4,
            "action": "Check primary semiconductors",
            "details": "Test bridge rectifier, primary switching transistors",
            "tools": ["Multimeter diode test"],
            "common_failures": ["Shorted rectifier diodes", "Failed switching FET"]
          },
          {
            "step": 5,
            "action": "Verify startup circuit",
            "details": "Check startup resistor, bootstrap capacitor, auxiliary winding",
            "symptoms": "Ticking sound indicates failed startup"
          },
          {
            "step": 6,
            "action": "Test PWM controller",
            "details": "Power controller IC externally with bench supply",
            "tools": ["Oscilloscope", "External 12-15V supply"],
            "check": "Look for oscillation on gate drive pins"
          }
        ]
      },
      "output_voltage_wrong": {
        "too_low": {
          "causes": [
            "Overload condition",
            "Failed feedback circuit",
            "Leaky secondary capacitors",
            "High ESR output capacitors",
            "Transformer saturation",
            "Wrong feedback resistor values"
          ],
          "diagnosis": [
            "Disconnect load and retest",
            "Check optocoupler with multimeter",
            "Measure output capacitor ESR",
            "Verify feedback divider resistances",
            "Check for oscillation on output"
          ]
        },
        "too_high": {
          "causes": [
            "Open feedback loop",
            "Failed optocoupler",
            "Wrong/changed feedback resistors",
            "Failed reference (TL431)"
          ],
          "diagnosis": [
            "Check optocoupler LED current",
            "Verify TL431 reference voltage (2.5V)",
            "Measure feedback resistor values",
            "Temporarily add load resistor"
          ]
        },
        "unstable": {
          "causes": [
            "Oscillation in feedback loop",
            "Bad output capacitors",
            "PCB layout issues",
            "Compensation network problems"
          ],
          "diagnosis": [
            "Scope output for oscillation",
            "Check ripple frequency",
            "Add capacitance temporarily",
            "Review ground routing"
          ]
        }
      },
      "thermal_issues": {
        "overheating_components": {
          "diagnosis": [
            "Use thermal camera to identify hot spots",
            "Measure component case temperatures",
            "Check for discoloration or burnt smell",
            "Monitor temperature rise over time"
          ],
          "common_causes": [
            "Inadequate heatsinking",
            "Excessive switching losses",
            "Core saturation",
            "Snubber circuit failure"
          ]
        }
      }
    },
    "digital_communication_debugging": {
      "i2c": {
        "no_ack": {
          "systematic_check": [
            {
              "test": "Verify pull-up resistors",
              "method": "Measure resistance SDA/SCL to VDD with power off",
              "expected": "2.2kΩ to 10kΩ typical",
              "fix": "Add appropriate pull-ups if missing"
            },
            {
              "test": "Check idle bus voltage",
              "method": "Measure SDA and SCL with no communication",
              "expected": "Both should be at VDD (3.3V or 5V)",
              "issue": "If low, check for shorts or stuck device"
            },
            {
              "test": "Verify device address",
              "method": "Run I2C scanner code",
              "tools": ["Logic analyzer", "I2C scanner sketch"],
              "note": "Check for address pin configuration"
            },
            {
              "test": "Analyze signal quality",
              "method": "Scope SDA/SCL for rise time and levels",
              "spec": "Rise time <1000ns for standard, <300ns for fast mode",
              "fix": "Lower pull-up values or add I2C buffer"
            },
            {
              "test": "Check bus capacitance",
              "method": "Measure with LCR meter or observe rise time",
              "spec": "Maximum 400pF for standard mode",
              "fix": "Shorten traces, reduce device count, or add buffer"
            }
          ]
        },
        "data_corruption": {
          "causes": [
            "Ground bounce between devices",
            "Crosstalk from adjacent signals",
            "Clock stretching timeout",
            "Voltage level mismatch"
          ],
          "diagnosis": [
            "Check ground connections between all devices",
            "Verify voltage levels match (no 5V/3.3V mix without shifter)",
            "Look for noise on power supplies",
            "Reduce I2C clock speed"
          ]
        }
      },
      "spi": {
        "no_communication": {
          "check_sequence": [
            {
              "item": "Clock polarity/phase (Mode)",
              "details": "Verify CPOL and CPHA match between master and slave",
              "modes": {
                "0": "CPOL=0, CPHA=0",
                "1": "CPOL=0, CPHA=1",
                "2": "CPOL=1, CPHA=0",
                "3": "CPOL=1, CPHA=1"
              }
            },
            {
              "item": "Chip select timing",
              "details": "CS must go low before clock starts, high after clock stops",
              "tools": ["Logic analyzer", "Oscilloscope"]
            },
            {
              "item": "MISO/MOSI connections",
              "details": "Common mistake: MISO-MISO instead of MISO-MOSI",
              "test": "Verify crossover connection"
            },
            {
              "item": "Clock frequency",
              "details": "Start with low frequency (100kHz), increase gradually",
              "max": "Check slave device datasheet for maximum"
            }
          ]
        }
      },
      "uart": {
        "garbage_data": {
          "causes": [
            "Baud rate mismatch",
            "Wrong word format (8N1, 7E1, etc.)",
            "Inverted signal levels",
            "Ground reference problems"
          ],
          "diagnosis": [
            {
              "test": "Measure bit time",
              "method": "Scope single character, measure bit width",
              "calculation": "Baud rate = 1/bit_time"
            },
            {
              "test": "Check idle level",
              "normal": "Line should idle high",
              "inverted": "If idling low, signals may be inverted"
            },
            {
              "test": "Verify levels",
              "ttl": "0V/3.3V or 0V/5V",
              "rs232": "+/-12V (inverted logic)"
            }
          ]
        }
      },
      "usb": {
        "enumeration_failure": {
          "systematic_debug": [
            {
              "step": "Verify VBUS",
              "test": "Measure 5V on VBUS pin",
              "spec": "4.75V to 5.25V",
              "tools": ["Multimeter"]
            },
            {
              "step": "Check D+/D- pullup",
              "fullspeed": "1.5kΩ pullup on D+ to 3.3V",
              "lowspeed": "1.5kΩ pullup on D- to 3.3V",
              "highspeed": "Check termination resistors"
            },
            {
              "step": "Verify differential pair",
              "routing": "D+ and D- must be length matched",
              "impedance": "90Ω ±10% differential",
              "test": "TDR measurement or careful layout review"
            },
            {
              "step": "Check crystal frequency",
              "requirement": "USB needs ±500ppm accuracy",
              "test": "Measure with frequency counter",
              "common": "12MHz, 24MHz, 48MHz crystals"
            },
            {
              "step": "Monitor enumeration",
              "tools": ["USB protocol analyzer", "Wireshark with USBPcap"],
              "look_for": "Device descriptor requests, address assignment"
            }
          ]
        }
      }
    },
    "analog_debugging": {
      "op_amp_circuits": {
        "oscillation": {
          "causes": [
            "Capacitive load without isolation",
            "Poor PCB layout (long feedback trace)",
            "Insufficient power supply bypassing",
            "Gain-bandwidth product exceeded"
          ],
          "fixes": [
            "Add 50-100Ω series output resistor",
            "Keep feedback trace short and away from inputs",
            "Add 0.1uF ceramic bypass at each supply pin",
            "Reduce gain or bandwidth"
          ]
        },
        "offset_errors": {
          "sources": [
            "Input offset voltage",
            "Input bias current through source resistance",
            "Temperature drift",
            "Power supply variation"
          ],
          "mitigation": [
            "Use precision op-amp (low Vos)",
            "Match impedances at both inputs",
            "Add offset nulling circuit",
            "Use instrumentation amplifier for DC precision"
          ]
        }
      },
      "adc_dac_issues": {
        "poor_accuracy": {
          "checks": [
            "Reference voltage stability and accuracy",
            "Power supply noise and PSRR",
            "Ground and signal routing (star ground)",
            "Sample and hold timing",
            "Input impedance and source impedance matching"
          ]
        }
      }
    },
    "mechanical_inspection": {
      "visual_inspection": {
        "tools": [
          "10-40X stereo microscope",
          "Good lighting (ring light preferred)",
          "ESD-safe probes and tweezers"
        ],
        "look_for": [
          "Solder bridges especially on fine-pitch components",
          "Cold solder joints (dull, grainy appearance)",
          "Tombstoned components",
          "Missing components",
          "Wrong component orientation (diodes, ICs, polarized caps)",
          "Cracked components or PCB",
          "Burnt or discolored areas",
          "Corrosion or flux residue"
        ]
      },
      "bga_inspection": {
        "methods": [
          {
            "type": "Visual/Endoscope",
            "capability": "Outer row only",
            "looks_for": "Uniform ball collapse, corner ball integrity"
          },
          {
            "type": "X-ray 2D",
            "capability": "Top-down view of all balls",
            "detects": "Bridges, missing balls, voids"
          },
          {
            "type": "X-ray 2.5D",
            "capability": "Tilted view",
            "detects": "Head-in-pillow, poor wetting"
          },
          {
            "type": "Cross-section",
            "capability": "Destructive analysis",
            "reveals": "Crack details, intermetallic layers"
          }
        ]
      }
    },
    "advanced_techniques": {
      "thermal_imaging": {
        "applications": [
          "Identify hot spots and overheating components",
          "Find shorts by looking for unexpected heat",
          "Verify heat sink effectiveness",
          "Detect high-resistance connections"
        ],
        "interpretation": {
          "normal": "Even heat distribution, components within spec",
          "abnormal": "Point sources of heat, unexpected hot spots",
          "gradient": "Heat spreading from failed component"
        }
      },
      "in_circuit_testing": {
        "curve_tracing": {
          "description": "Apply V-I curve to component in circuit",
          "detects": "Changed characteristics without removal",
          "tools": ["Huntron Tracker", "Oscilloscope X-Y mode"]
        },
        "signature_analysis": {
          "description": "Compare good vs bad board signatures",
          "useful_for": "No schematic available situations"
        }
      },
      "boundary_scan_jtag": {
        "capabilities": [
          "Test digital ICs without physical probe",
          "Detect opens and shorts on BGA",
          "Program devices in-system",
          "Test interconnections between JTAG devices"
        ],
        "requirements": [
          "JTAG-enabled devices",
          "BSDL files for components",
          "JTAG test equipment"
        ]
      },
      "time_domain_reflectometry": {
        "applications": [
          "Find location of opens and shorts",
          "Measure impedance discontinuities",
          "Locate faults in cables and traces"
        ],
        "interpretation": {
          "open": "Positive reflection",
          "short": "Negative reflection",
          "impedance_change": "Partial reflection"
        }
      }
    }
  }
}