LOG_ROTATION_SIZE=5242880   # –†–∞–∑–º–µ—Ä —Ñ–∞–π–ª–∞ –¥–ª—è —Ä–æ—Ç–∞—Ü–∏–∏ (5 –ú–ë)
LOG_BACKUP_COUNT=3          # –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å–æ—Ö—Ä–∞–Ω—è–µ–º—ã—Ö –∞—Ä—Ö–∏–≤–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤
