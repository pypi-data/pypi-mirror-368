# MANIFEST.in for Tokker - Package distribution manifest

# Include essential project files
include README.md
include LICENSE
include pyproject.toml
include google-auth-guide.md

# Include the main package from src/ layout
recursive-include src/tokker *.py
recursive-include src/tokker *.md

# Exclude tests from the sdist
prune tests

# Exclude development and build artifacts
exclude .gitignore
exclude Makefile
# Additional packaging artifact directories (rarely present in repo, exclude if they appear)
prune downloads
prune wheels
prune sdist
prune pip-wheel-metadata
prune share/python-wheels

# Exclude hidden files and directories / caches
global-exclude __pycache__/*
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store
global-exclude .coverage
global-exclude .coverage.*
global-exclude .pytest_cache/*
global-exclude .pytest_cache
global-exclude .mypy_cache/*
global-exclude .mypy_cache
global-exclude .ruff_cache/*
global-exclude .ruff_cache

# Exclude development directories and local envs
prune .git
prune .ropeproject
prune venv
prune env
prune build
prune dist
prune *.egg-info
prune .vscode
prune .idea

# Exclude temporary and editor swap files
global-exclude *.tmp
global-exclude *.temp
global-exclude *~
global-exclude *.swp
global-exclude *.swo
