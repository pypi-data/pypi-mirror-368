# Include the README and license
include README.md
include LICENSE
include .env.example

# Include all Python files in the package
recursive-include app *.py
recursive-include tests *.py

# Include configuration files
include pyproject.toml
include CLI_GUIDE.md
include GCP_SETUP.md
include API_DOCUMENTATION.md

# Exclude unnecessary files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
exclude .DS_Store
exclude .gitignore
exclude compose.yml
exclude Dockerfile
recursive-exclude .github *
recursive-exclude venv *
recursive-exclude input *
recursive-exclude output *
recursive-exclude scripts *