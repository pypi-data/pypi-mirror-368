<odoo>
<record id="odoo_website_theme_view_search" model="ir.ui.view">
    <field name="name">odoo_website_theme - search</field>
    <field name="model">odoo_website_theme</field>
    <field
            name="inherit_id"
            ref="ssi_master_data_mixin.mixin_master_data_view_search"
        />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='code']" position="after">
                <field name="version_ids" />
            </xpath>
            <xpath expr="//search" position="inside">
                <filter
                        name="with_modules"
                        string="With Modules"
                        domain="[('default_module_ids', '!=', False)]"
                    />
                <filter
                        name="without_modules"
                        string="Without Modules"
                        domain="[('default_module_ids', '=', False)]"
                    />
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_website_theme_view_tree" model="ir.ui.view">
    <field name="name">odoo_website_theme - tree</field>
    <field name="model">odoo_website_theme</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_tree" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='name']" position="after">
                <field name="version_ids" widget="many2many_tags" />
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_website_theme_view_form" model="ir.ui.view">
    <field name="name">odoo_website_theme - form</field>
    <field name="model">odoo_website_theme</field>
    <field name="inherit_id" ref="ssi_master_data_mixin.mixin_master_data_view_form" />
    <field name="mode">primary</field>
    <field name="arch" type="xml">
        <data>
            <xpath expr="//field[@name='active']" position="after">
                <field name="version_ids" widget="many2many_tags" />
            </xpath>
            <xpath expr="//page[1]" position="before">
                <page name="module" string="Modules">
                    <field name="default_module_ids" />
                </page>
            </xpath>
        </data>
    </field>
</record>

<record id="odoo_website_theme_action" model="ir.actions.act_window">
    <field name="name">Website Themes</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">odoo_website_theme</field>
    <field name="view_mode">tree,form</field>
</record>

<menuitem
        id="odoo_website_theme_menu"
        name="Website Themes"
        parent="menu_odoo_configuration"
        action="odoo_website_theme_action"
        groups="odoo_website_theme_group"
        sequence="20"
    />

</odoo>
