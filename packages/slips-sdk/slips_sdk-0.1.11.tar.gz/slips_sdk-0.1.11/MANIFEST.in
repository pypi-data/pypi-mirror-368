# Include basic project files
include LICENSE
include README.md
include slips.py

# Recursively include all files under slips/StratosphereLinuxIPS/
recursive-include slips/StratosphereLinuxIPS *

# Recursively include all files under slips_files/
recursive-include slips_files *

# Recursively include everything in build/lib/slips (if needed)
recursive-include build/lib/slips *

# Include everything from the root (optional)
global-include *

# Exclude pycache and compiled files (recommended)
global-exclude __pycache__
global-exclude *.py[cod]
