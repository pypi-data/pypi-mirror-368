[flake8]
exclude =
    .git
    __pycache__
    __init__.py
    setup.py
    example_usage.py
    .eggs
    build
    docs
    text_sensitivity/data/lists/regenerate.py
    text_sensitivity/test
extend-ignore =
    D101
    D205
    D400
    D401
    D402
    D413
    E127
    W291
    W504
select = C,E,F,W,B,B950,D,RST

max-line-length=120