# GRASS GIS RAG Pipeline - Package Manifest
# Specifies which files to include in the distribution package

# Include documentation
include README.md
include LICENSE
include requirements.txt
include requirements_production.txt
include requirements_ultra_minimal.txt
recursive-include docs *.md

# Include examples
recursive-include examples *.py

# Include package data
recursive-include grass_rag/data *.json
recursive-include grass_rag *.py

# Include visualization assets
include quality_distribution.png
include response_time_distribution.png
include method_distribution.png
include target_achievement.png
include performance_summary.txt

# Include tests
recursive-include tests *.py

# Exclude development and build files
global-exclude *.pyc
global-exclude __pycache__
global-exclude .git*
global-exclude .venv*
global-exclude .vscode*
global-exclude *.egg-info*
global-exclude build*
global-exclude dist*