# Include documentation and configuration files
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml
include setup.py

# Include example files
include examples/*.py
include examples/*.md
include examples/*.json
include examples/*.csv
include examples/*.txt

# Include test files
recursive-include tests *.py
recursive-include tests *.txt
recursive-include tests *.md
recursive-include tests *.json
recursive-include tests *.csv

# Include package data
recursive-include src/universal_printer *.py
recursive-include src/universal_printer *.md
recursive-include src/universal_printer *.txt
recursive-include src/universal_printer *.json

# Exclude development and build files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude .coverage
global-exclude .pytest_cache
prune build
prune dist
prune *.egg-info