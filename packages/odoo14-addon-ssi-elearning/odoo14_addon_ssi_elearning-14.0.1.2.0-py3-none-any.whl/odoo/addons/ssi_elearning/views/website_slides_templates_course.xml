<odoo>

    <template id="course_slides_cards" inherit_id="website_slides.course_slides_cards">
        <xpath expr="//li[hasclass('ml-lg-auto')]" position="replace">
            <li class="nav-item dropdown ml-lg-auto">
                <a
                    class="nav-link dropdown-toggle dropdown-toggle align-items-center d-flex"
                    type="button"
                    id="slidesChannelDropdownSort"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                    href="#"
                >
                    <b>Order by</b>
                    <span class="d-none d-xl-inline">:
                        <t t-if="sorting == 'sequence'">Sequence</t>
                        <t t-elif="sorting == 'most_voted'">Most Voted</t>
                        <t t-elif="sorting == 'most_viewed'">Most Viewed</t>
                        <t t-else="">Newest</t>
                    </span>
                </a>
                <div
                    class="dropdown-menu"
                    aria-labelledby="slidesChannelDropdownSort"
                    role="menu"
                >
                    <h6 class="dropdown-header">Sort by</h6>
                    <a
                        role="menuitem"
                        t-att-href="'/slides/%s?%s' % (slug(channel), keep_query('slide_type', sorting='sequence'))"
                        t-att-class="'dropdown-item %s' % ('active' if sorting and sorting == 'sequence' else '')"
                    >Sequence</a>
                    <a
                        role="menuitem"
                        t-att-href="'/slides/%s?%s' % (slug(channel), keep_query('slide_type', sorting='latest'))"
                        t-att-class="'dropdown-item %s' % ('active' if sorting and sorting == 'latest' else '')"
                    >Newest</a>
                    <a
                        role="menuitem"
                        t-att-href="'/slides/%s?%s' % (slug(channel), keep_query('slide_type', sorting='most_voted'))"
                        t-att-class="'dropdown-item %s' % ('active' if sorting and sorting == 'most_voted' else '')"
                    >Most Voted</a>
                    <a
                        role="menuitem"
                        t-att-href="'/slides/%s?%s' % (slug(channel), keep_query('slide_type', sorting='most_viewed'))"
                        t-att-class="'dropdown-item %s' % ('active' if sorting and sorting == 'most_viewed' else '')"
                    >Most Viewed</a>
                </div>
            </li>
        </xpath>
    </template>

    <template
        id="slide_related_content_training"
        name="Slide: Related Content Training"
    >
        <div
            class="o_wslides_lesson_aside_doc position-relative bg-white pb-1 my-3 border-bottom"
        >
            <ul class="nav nav-tabs nav-fill" role="tablist">
                <li class="nav-item"><a
                        aria-controls="related_training"
                        href="#related_training"
                        class="nav-link rounded-0 border-top-0 border-left-0 py-2 active"
                        data-toggle="tab"
                    >Related Content</a></li>
            </ul>
            <div class="tab-content">
                <div role="tabpanel" id="related" class="tab-pane active bg-100">
                    <ul class="list-group list-group-flush">
                        <t t-if="not channel.related_content_ids">
                            No related content available.
                        </t>
                        <t
                            t-else=""
                            t-foreach="channel.related_content_ids"
                            t-as="related_content_id"
                        >
                            <a
                                class="list-group-item list-group-item-action d-flex align-items-start px-2"
                                t-att-href="'/slides/slide/%s' % (slug(related_content_id))"
                            >
                                <t
                                    t-set="slide_image"
                                    t-value="website.image_url(related_content_id, 'image_1024')"
                                />

                                <div
                                    t-if="related_content_id.image_1024"
                                    class="flex-shrink-0 mr-1 border"
                                    t-attf-style="width: 20%; padding-top: 20%; background-image: url(#{slide_image}); background-size: cover; background-position:center"
                                />
                                <div
                                    t-else=""
                                    class="o_wslides_gradient flex-shrink-0 mr-1"
                                    t-attf-style="width: 20%; padding-top: 20%;"
                                />
                                <div
                                    class="overflow-hidden d-flex flex-column justify-content-start"
                                >
                                    <h6
                                        t-esc="related_content_id.name"
                                        class="o_wslides_desc_truncate_2 mb-1"
                                        style="line-height: 1.15"
                                    />
                                    <small class="text-600">
                                        <t
                                            t-esc="related_content_id.total_views"
                                        /> Views &#8226; <timeago
                                            class="timeago"
                                            t-att-datetime="related_content_id.create_date"
                                        />
                                    </small>
                                </div>
                            </a>
                        </t>
                    </ul>
                </div>
            </div>
        </div>
    </template>

    <template id="course_main" inherit_id="website_slides.course_main">
        <xpath
            expr="//div[@class='o_wslides_course_main']/div/div/div/t"
            position="after"
        >
            <t t-call="ssi_elearning.slide_related_content_training" />
        </xpath>
    </template>

</odoo>
