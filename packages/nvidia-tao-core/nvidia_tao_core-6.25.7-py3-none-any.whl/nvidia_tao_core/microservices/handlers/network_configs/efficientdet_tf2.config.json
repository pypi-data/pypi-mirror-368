{
    "api_params": {
        "dataset_type":"object_detection",
        "actions": ["train","evaluate","prune","retrain","export","gen_trt_engine","inference"],
        "formats":["coco", "raw"],
        "accepted_ds_intents": ["training", "evaluation", "testing"],
        "image":"TAO_TF2",
        "spec_backend":"yaml",
        "actions_pipe":{
            "train":"train",
            "evaluate":"evaluate",
            "prune":"prune_tf2",
            "retrain":"retrain",
            "export":"export_tf2",
            "gen_trt_engine":"gen_trt_engine",
            "inference":"inference"
        }
    },

    "data_sources": {
        "train": {
            "dataset.train_tfrecords": {
                "source": "train_datasets",
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert",
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            },
            "dataset.val_tfrecords": {
                "source": "eval_dataset", 
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert", 
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            },
            "dataset.val_json_file": {
                "source": "eval_dataset",
                "multiple_sources": false,
                "path": "annotations.json"
            }
        },
        "evaluate": {
            "dataset.train_tfrecords": {
                "source": "train_datasets",
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert",
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            },
            "dataset.val_tfrecords": {
                "source": "eval_dataset", 
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert", 
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            },
            "dataset.val_json_file": {
                "source": "eval_dataset",
                "multiple_sources": false,
                "path": "annotations.json"
            }
        },
        "retrain": {
            "dataset.train_tfrecords": {
                "source": "train_datasets",
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert",
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            },
            "dataset.val_tfrecords": {
                "source": "eval_dataset", 
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert", 
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            },
            "dataset.val_json_file": {
                "source": "eval_dataset",
                "multiple_sources": false,
                "path": "annotations.json"
            }
        },
        "export": {
            "dataset.train_tfrecords": {
                "source": "train_datasets",
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert",
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            },
            "dataset.val_tfrecords": {
                "source": "eval_dataset", 
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert", 
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            }
        },
        "inference": {
            "dataset.train_tfrecords": {
                "source": "train_datasets",
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert",
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            },
            "dataset.val_tfrecords": {
                "source": "eval_dataset", 
                "multiple_sources": false,
                "path": "results/{dataset_convert_job_id}/dataset_convert", 
                "transform": ["use_dataset_convert_job", "wrap_in_list"]
            },
            "inference.image_dir": {
                "source": "inference_dataset",
                "multiple_sources": false,
                "path": "images.tar.gz",
                "transform": "handle_tar_path"
            },
            "inference.label_map": {
                "source": "inference_dataset",
                "multiple_sources": false,
                "path": "label_map.yaml"
            }
        },
        "gen_trt_engine": {
            "gen_trt_engine.tensorrt.calibration.cal_image_dir": {
                "source": "calibration_dataset",
                "multiple_sources": false,
                "path": "images.tar.gz",
                "transform": "handle_tar_path"
            }
        }
    },

    "spec_params":{
        "train":{
            "results_dir":"output_dir",
            "train.checkpoint": "ptm_if_no_resume_model",
            "train.resume_training_checkpoint_path":"resume_model",
            "encryption_key":"key"
        },
        "evaluate":{
            "results_dir":"output_dir",
            "evaluate.checkpoint":"parent_model_evaluate",
            "evaluate.trt_engine":"parent_model",
            "encryption_key":"key"
        },
        "prune":{
            "results_dir":"output_dir",
            "prune.checkpoint":"parent_model",
            "encryption_key":"key"
        },
        "retrain":{
            "results_dir":"output_dir",
            "train.checkpoint":"parent_model",
            "train.pruned_model_path":"parent_model",
            "encryption_key":"key"
        },
        "export": {
            "results_dir":"output_dir",
            "export.checkpoint":"parent_model",
            "export.onnx_file":"create_onnx_file",
            "encryption_key":"key"
        },
        "inference":{
            "results_dir":"output_dir",
            "inference.checkpoint":"parent_model",
            "inference.trt_engine":"parent_model",
            "encryption_key":"key"
        },
        "gen_trt_engine": {
            "results_dir":"output_dir",
            "encryption_key":"key",
            "gen_trt_engine.onnx_file":"parent_model",
            "gen_trt_engine.trt_engine":"create_engine_file",
            "gen_trt_engine.tensorrt.calibration.cal_cache_file":"create_cal_cache"
        }   
   },

    "automl_spec_params":{
        "results_dir":"automl_output_dir",
        "train.checkpoint_interval":"assign_const_value,train.num_epochs",
        "train.validation_interval":"assign_const_value,train.num_epochs,train.checkpoint_interval",
        "train.checkpoint":"automl_assign_ptm",
        "train.resume_training_checkpoint_path": "automl_resume_model",
        "encryption_key":"key"
    },

    "metrics": {
        "available_metrics": ["AP50"],
        "monitoring_metric": "AP50"
    }
}