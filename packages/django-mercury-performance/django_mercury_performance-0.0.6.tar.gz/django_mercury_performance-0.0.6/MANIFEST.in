# Include package data
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include setup.py
include pyproject.toml

# Include C source files (not compiled libraries)
recursive-include django_mercury/c_core *.c *.h Makefile BUILD.md

# Include Python files
recursive-include django_mercury *.py

# Include documentation
recursive-include django_mercury/documentation *.md

# Include examples
recursive-include django_mercury/examples *.py

# Exclude test files from package
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

# Exclude compiled C files and test executables
recursive-exclude django_mercury/c_core *.o *.d *.so
recursive-exclude django_mercury/c_core simple_test_* edge_test_* comprehensive_test_* test_*
recursive-exclude django_mercury/c_core/tests *
recursive-exclude django_mercury/c_core/logs *
recursive-exclude django_mercury/c_core/coverage *

# Exclude development files
exclude .gitignore
exclude .env
exclude pypi-deploy.sh
exclude test_runner.py
exclude debug_test_runner.py
exclude quick_test.py