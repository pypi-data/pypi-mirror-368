{
    "servers": {
        "winrm-mcp-server": {
            "command": "uvx",
            "args": [
                "winrm-mcp-server"
            ],
            "env": {
                "WINRM_MCP_HOSTNAME": "remote.host.com",
                "WINRM_MCP_USERNAME": "username",
                "WINRM_MCP_PASSWORD": "secret",
                "WINRM_MCP_COMMAND_TIMEOUT": "300",
                "WINRM_MCP_USE_HTTPS": "true",
                "WINRM_MCP_SKIP_SSL_VERIFICATION": "false"
            }
        }
    }
}