# Odoo Connection Configuration
# Copy this file to .env and update with your actual values

# Required: Odoo server connection
ODOO_HOST=your-odoo-server.com
ODOO_PORT=8069
ODOO_DB=your_database_name
ODOO_USERNAME=your_username
ODOO_PASSWORD=your_password

# Optional: Connection settings
ODOO_PROTOCOL=jsonrpc
ODOO_TIMEOUT=120

# Optional: Test database (for testing purposes)
TEST_ODOO_HOST=localhost
TEST_ODOO_PORT=8069
TEST_ODOO_DB=test_database
TEST_ODOO_USERNAME=admin
TEST_ODOO_PASSWORD=admin