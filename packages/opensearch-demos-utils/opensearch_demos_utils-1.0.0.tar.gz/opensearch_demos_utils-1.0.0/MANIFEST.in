# Include documentation and license files
include README.md
include LICENSE
include SECURITY_GUIDE.md

# Include requirements files
include requirements.txt
include requirements-core.txt

# Include package source code
recursive-include opensearch_demos_utils *.py

# Include configuration templates and sample data
recursive-include config *.py *.json *.csv

# Include documentation
recursive-include docs *.md

# Exclude compiled Python files and cache directories
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * .DS_Store

# Exclude test files from distribution
recursive-exclude tests *
exclude test_*.py
exclude *_test.py

# Exclude development and build artifacts
exclude .gitignore
exclude .env*
recursive-exclude * .git*
exclude tox.ini
exclude .coverage
exclude .pytest_cache