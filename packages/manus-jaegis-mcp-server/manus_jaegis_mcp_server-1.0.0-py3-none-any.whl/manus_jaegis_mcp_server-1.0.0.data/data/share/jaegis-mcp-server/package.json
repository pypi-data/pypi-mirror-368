{
  "name": "jaegis-mcp-server",
  "version": "1.0.1",
  "description": "JAEGIS AI Web OS MCP Server - Advanced Model Context Protocol server with filesystem, git, project management, and AI integration tools",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jaegis-mcp-server": "./bin/jaegis-mcp-server.js",
    "manus-mcp-server": "./bin/jaegis-mcp-server.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "cp -r src/templates dist/ && cp -r src/schemas dist/",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "echo 'Skipping build and test for initial publish'",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:npm": "npm publish --access public",
    "publish:beta": "npm publish --tag beta --access public",
    "publish:dry": "npm publish --dry-run",
    "docs:generate": "typedoc src/index.ts --out docs",
    "validate": "npm run type-check && npm run lint && npm run test",
    "ci": "npm ci && npm run validate && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "jaegis",
    "filesystem",
    "git",
    "project-management",
    "development-tools",
    "automation",
    "claude",
    "anthropic",
    "augment",
    "typescript",
    "nodejs"
  ],
  "author": {
    "name": "JAEGIS Team",
    "email": "support@jaegis.ai",
    "url": "https://jaegis.ai"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaegis/jaegis-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/jaegis/jaegis-mcp-server/issues"
  },
  "homepage": "https://github.com/jaegis/jaegis-mcp-server#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "simple-git": "^3.20.0",
    "chokidar": "^3.5.3",
    "glob": "^10.3.10",
    "mime-types": "^2.1.35",
    "yaml": "^2.3.4",
    "zod": "^3.22.4",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/mime-types": "^2.1.4",
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "typedoc": "^0.25.4"
  },
  "peerDependencies": {
    "typescript": ">=4.9.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/jaegis"
  },
  "preferGlobal": true,
  "directories": {
    "lib": "dist",
    "bin": "bin",
    "doc": "docs",
    "test": "tests"
  }
}
