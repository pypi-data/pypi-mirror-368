# Include the license file
include LICENSE

# Include the readme file
include README.md

# Include the changelog
include CHANGELOG.md

# Include the contributing guide
include CONTRIBUTING.md

# Include the requirements files
include requirements*.txt

# Include type information
include src/itinerizer/py.typed

# Include package data
recursive-include src/itinerizer *.json *.yaml *.yml

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*
global-exclude .coverage
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .tox
global-exclude *.egg-info

# Exclude test and development files from package
prune tests
prune docs
prune scripts
prune web_ui
prune sample-code
prune tickets
prune data
prune docker
prune htmlcov
prune test_screenshots