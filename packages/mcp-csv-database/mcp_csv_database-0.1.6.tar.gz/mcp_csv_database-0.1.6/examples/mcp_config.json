{
  "mcpServers": {
    "csv-database": {
      "command": "mcp-csv-database",
      "args": ["/path/to/your/csv/files"],
      "env": {
        "PYTHONPATH": "/path/to/your/project"
      }
    },
    "csv-database-with-prefix": {
      "command": "mcp-csv-database",
      "args": ["--csv-folder", "/data/analytics", "--table-prefix", "analytics_"]
    },
    "csv-database-http": {
      "command": "mcp-csv-database", 
      "args": ["/data/sales", "--transport", "sse", "--port", "8080"]
    }
  }
}