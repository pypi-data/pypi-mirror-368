# GitScribe Environment Configuration

# Server settings
GITSCRIBE_DEBUG=false
GITSCRIBE_SERVER_NAME=gitscribe
GITSCRIBE_SERVER_VERSION=1.0.0

# Scraping settings
GITSCRIBE_MAX_DEPTH=3
GITSCRIBE_MAX_PAGES=100
GITSCRIBE_REQUEST_DELAY=1.0
GITSCRIBE_TIMEOUT=30
GITSCRIBE_RATE_LIMIT=60
GITSCRIBE_CONCURRENT_REQUESTS=5

# RAG system settings
GITSCRIBE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
GITSCRIBE_CHUNK_SIZE=1000
GITSCRIBE_CHUNK_OVERLAP=200
GITSCRIBE_MAX_RESULTS=10
GITSCRIBE_SIMILARITY_THRESHOLD=0.7

# ChromaDB settings
GITSCRIBE_CHROMA_DIR=./chroma_db
GITSCRIBE_CHROMA_COLLECTION=gitscribe_docs

# Git platform authentication (optional)
# GITHUB_TOKEN=your_github_token_here
# GITLAB_TOKEN=your_gitlab_token_here
# BITBUCKET_TOKEN=your_bitbucket_token_here

# OpenAI API key (if using OpenAI embeddings)
# OPENAI_API_KEY=your_openai_key_here
