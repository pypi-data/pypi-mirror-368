<odoo>
    <record id="res_company_view_form" model="ir.ui.view">
    <field name="name">res.company - Form</field>
    <field name="model">res.company</field>
    <field name="mode">extension</field>
    <field name="inherit_id" ref="base.view_company_form" />
    <field name="arch" type="xml">
        <data>
            <xpath expr="//notebook" position="inside">
                <page name="career_transition" string="Career Transition">
                    <group name="career_transition_1" col="2" colspan="4">
                        <group name="career_transition_1_1" colspan="1" col="2">
                            <field name="join_transition_type_id" string="Join" />
                            <field
                                    name="terminate_transition_type_id"
                                    string="Terminate"
                                />
                            <field
                                    name="permanent_transition_type_id"
                                    string="Permanent"
                                />
                            <field
                                    name="contract_transition_type_id"
                                    string="Contract"
                                />
                        </group>
                    </group>
                </page>
            </xpath>
        </data>
    </field>
</record>
</odoo>
