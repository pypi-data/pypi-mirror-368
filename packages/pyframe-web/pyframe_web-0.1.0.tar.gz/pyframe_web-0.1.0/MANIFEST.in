# Include the README and other documentation
include README.md
include LICENSE
include CHANGELOG.md
include pyproject.toml

# Include example applications
recursive-include examples *.py
recursive-include examples *.md
recursive-include examples *.txt
recursive-include examples *.html
recursive-include examples *.css
recursive-include examples *.js

# Include package data
recursive-include pyframe/templates *.html
recursive-include pyframe/static *.js
recursive-include pyframe/static *.css

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude *.so
global-exclude *.db
global-exclude *.sqlite
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
