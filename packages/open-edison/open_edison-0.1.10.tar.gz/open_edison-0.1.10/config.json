{
    "server": {
        "host": "0.0.0.0",
        "port": 3000,
        "api_key": "dev-api-key-change-me"
    },
    "logging": {
        "level": "INFO",
        "database_path": "sessions.db"
    },
    "mcp_servers": [
        {
            "name": "filesystem",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "/tmp"
            ],
            "env": {},
            "enabled": true,
            "roots": []
        },
        {
            "name": "fetch",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-everything"
            ],
            "env": {},
            "enabled": false
        },
        {
            "name": "github",
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ],
            "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "your-github-token-here"
            },
            "enabled": false
        },
        {
            "name": "sqlite",
            "command": "npx",
            "args": [
                "-y",
                "mcp-sqlite",
                "./test.db"
            ],
            "env": {},
            "enabled": false,
            "roots": []
        }
    ]
}