# Symbiont SDK Configuration
# Copy this file to .env and update the values as needed

# API Base URL - Configure for different providers
# For OpenAI (default)
SYMBIONT_API_BASE_URL=https://api.openai.com/v1

# For Ollama (local)
# SYMBIONT_API_BASE_URL=http://localhost:11434/v1

# For other OpenAI-compatible APIs
# SYMBIONT_API_BASE_URL=https://your-api-endpoint.com/v1

# API Key - Required for most providers (not needed for local Ollama)
SYMBIONT_API_KEY=your_api_key_here

# Default model to use
SYMBIONT_DEFAULT_MODEL=gpt-3.5-turbo

# Optional: Organization ID (for OpenAI)
# SYMBIONT_ORG_ID=your_org_id

# Optional: Request timeout (seconds)
SYMBIONT_TIMEOUT=30

# Optional: Maximum retries for API calls
SYMBIONT_MAX_RETRIES=3