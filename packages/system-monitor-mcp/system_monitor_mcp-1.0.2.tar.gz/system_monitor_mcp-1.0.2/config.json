{
  "server": {
    "name": "system-monitor-mcp",
    "version": "1.0.0",
    "description": "System monitoring and performance analysis MCP server based on PyQt5 monitoring program",
    "author": "undoom",
    "email": "kaikaihuhu666@163.com"
  },
  "monitoring": {
    "default_interval": 1,
    "max_history_points": 1000,
    "default_duration": 60,
    "enable_gpu_monitoring": true,
    "enable_temperature_monitoring": true
  },
  "security": {
    "allow_process_kill": true,
    "require_confirmation_for_force_kill": true,
    "max_processes_to_show": 50
  },
  "output": {
    "theme": "matrix",
    "date_format": "%Y-%m-%d %H:%M:%S",
    "number_precision": 1,
    "byte_format_units": ["B", "KB", "MB", "GB", "TB", "PB"]
  },
  "features": {
    "continuous_monitoring": true,
    "performance_reports": true,
    "historical_data": true,
    "process_management": true,
    "hardware_monitoring": true
  }
}