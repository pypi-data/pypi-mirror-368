# Minimax API 配置
minimax:
  group_id: "your_minimax_group_id"
  api_key: "your_minimax_api_key"

# 转换后的 OpenAI TTS API 密钥认证
api_keys: ["your_api_key_here"]

# 默认参数配置，在调用程序未指定时生效
defaults:
  voice: "voice_id"
  model: "model_name"
  speed: 1.0
  volume: 5
  pitch: 0
  emotion: "happy"

# 音频设置默认值
audio:
  sample_rate: 32000
  bitrate: 128000
  channel: 1

# 音色获取配置
voice_fetching:
  voice_type: "all"
# 可选值: "system", "voice_cloning", "voice_generation", "music_generation", "all"
# system 系统音色
# voice_cloning 快速复刻的音色
# voice_generation 文生音色接口生成的音色
# music_generation 音乐生成产生的人声或者伴奏音色
# all 以上全部

# 支持的格式和模型
supported:
  formats: ["mp3", "pcm", "flac"]
  models:
    speech-2.5-hd-preview: "Speech 2.5 HD Preview"
    speech-2.5-turbo-preview: "Speech 2.5 Turbo Preview"
    speech-02-hd: "Speech 02 HD"
    speech-02-turbo: "Speech 02 Turbo"
    speech-01-hd: "Speech 01 HD"
    speech-01-turbo: "Speech 01 Turbo"
    speech-01-240228: "Speech 01 (240228)"
    speech-01-turbo-240228: "Speech 01 Turbo (240228)"
  voices: {}
