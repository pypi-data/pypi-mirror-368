# Development Environment Configuration
# This file contains development-specific settings

# =============================================================================
# Database Configuration (Development)
# =============================================================================
POSTGRES_PASSWORD=authly_dev_password
POSTGRES_PORT=5432

# =============================================================================
# Redis Configuration (Development)
# =============================================================================
REDIS_PASSWORD=redis_dev_password
REDIS_PORT=6379

# =============================================================================
# JWT Configuration (Development - INSECURE)
# =============================================================================
JWT_SECRET_KEY=dev-secret-key-do-not-use-in-production
JWT_REFRESH_SECRET_KEY=dev-refresh-secret-key-do-not-use-in-production
JWT_ALGORITHM=HS256

# =============================================================================
# Token Expiration Settings (Development)
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Rate Limiting (Relaxed for Development)
# =============================================================================
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# API Configuration (Development)
# =============================================================================
AUTHLY_PORT=8000
AUTHLY_API_VERSION_PREFIX=/api/v1
DEFAULT_API_URL=http://localhost:8000
DEFAULT_ISSUER_URL=http://localhost:8000

# =============================================================================
# Security Settings (Development)
# =============================================================================
RSA_KEY_SIZE=2048
TOKEN_HEX_LENGTH=32
AUTHORIZATION_CODE_LENGTH=32
CLIENT_SECRET_LENGTH=32

# =============================================================================
# Pagination Settings
# =============================================================================
DEFAULT_PAGE_SIZE=100
MAX_PAGE_SIZE=100

# =============================================================================
# Field Validation
# =============================================================================
USERNAME_MIN_LENGTH=1
USERNAME_MAX_LENGTH=50
PASSWORD_MIN_LENGTH=8

# =============================================================================
# Development/Debug Settings
# =============================================================================
AUTHLY_BOOTSTRAP_DEV_MODE=true
AUTHLY_DEV_MODE=true
AUTHLY_LOG_LEVEL=DEBUG

# =============================================================================
# Admin API Configuration (Development)
# =============================================================================
AUTHLY_ADMIN_API_ENABLED=true

# =============================================================================
# Nginx Configuration (Development)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Monitoring Configuration (Development)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# Domain Configuration (Development)
# =============================================================================
AUTHLY_DOMAIN=http://localhost:8000
ENVIRONMENT=development