# Environment variables for Docker Hub deployment
# Copy to .env.hub and customize for your deployment

# Authly Docker Image Version
AUTHLY_VERSION=latest
# AUTHLY_VERSION=0.5.3
# AUTHLY_VERSION=0.5

# Database Configuration
POSTGRES_PASSWORD=authly_hub_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=redis_hub_password
REDIS_PORT=6379

# Authly Configuration
AUTHLY_PORT=8000
AUTHLY_BOOTSTRAP_ENABLED=true

# Redis Features
AUTHLY_REDIS_RATE_LIMIT=true
AUTHLY_REDIS_CACHE=true
AUTHLY_REDIS_SESSION=false

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET_KEY=your-production-jwt-secret-key-256-bits
JWT_REFRESH_SECRET_KEY=your-production-jwt-refresh-secret-key-256-bits

# Token Expiration
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# URLs (update for your domain)
DEFAULT_API_URL=http://localhost:8000
DEFAULT_ISSUER_URL=http://localhost:8000

# Admin Configuration
AUTHLY_ADMIN_API_ENABLED=true
AUTHLY_ADMIN_API_LOCALHOST_ONLY=false
AUTHLY_ADMIN_USERNAME=admin
AUTHLY_ADMIN_PASSWORD=your-admin-password
AUTHLY_ADMIN_EMAIL=admin@your-domain.com
AUTHLY_ADMIN_ALLOW_LOCALHOST=true

# Logging
LOG_LEVEL=INFO
AUTHLY_LOG_LEVEL=INFO

# pgAdmin (optional - use with --profile admin)
PGADMIN_PORT=5050
PGADMIN_EMAIL=admin@authly.dev
PGADMIN_PASSWORD=admin

# Redis Commander (optional - use with --profile admin)
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin

# Monitoring (optional - use with --profile monitoring)
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin