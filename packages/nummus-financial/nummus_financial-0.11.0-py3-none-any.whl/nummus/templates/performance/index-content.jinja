<section
  class="m-auto min-h-full max-w-screen-lg bg-white p-2"
  hx-get="{{ url_for('performance.page') }}"
  hx-trigger="update-account from:body, update-asset from:body"
  hx-target="#main"
>
  <h1 class="align-left w-full font-serif text-2xl text-green-600 md:text-3xl">
    Performance
  </h1>
  <div class="w-full text-lg">
    <span class="decoration-blue underline decoration-dotted decoration-2"
      >Time-Weighted Return Rate</span
    >
    versus
    <span class="decoration-yellow underline decoration-dotted decoration-2"
      >Market Indices</span
    >
  </div>
  <div class="relative h-60 w-full md:h-96">
    <canvas id="performance-chart-canvas" hx-preserve></canvas>
    {% include "shared/spinner.jinja" %}
  </div>
  {% include "performance/chart-config.jinja" %}
  <h1 class="align-left w-full font-serif text-2xl text-green-600 md:text-3xl">
    Accounts
  </h1>
  {% with accounts = chart["accounts"] %}
    {% include "performance/accounts.jinja" %}
  {% endwith %}
  {% include "performance/chart-data.jinja" %}
</section>
