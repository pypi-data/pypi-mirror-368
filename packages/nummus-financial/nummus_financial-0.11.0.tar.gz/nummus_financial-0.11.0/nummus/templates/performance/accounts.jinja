<div
  id="accounts"
  class="max-h-[25vh] min-h-80 overflow-y-scroll"
  hx-swap-oob="{{ oob }}"
>
  <div
    class="border-b-grey-200 sticky top-0 flex w-full min-w-[650px] border-b bg-white font-bold"
  >
    <div class="w-28 shrink-0 grow-[4] truncate p-1">Name</div>
    <div class="w-28 shrink-0 grow p-1 text-right">Initial</div>
    <div class="w-28 shrink-0 grow p-1 text-right">Cash Flow</div>
    <div class="w-28 shrink-0 grow p-1 text-right">End Balance</div>
    <div class="w-28 shrink-0 grow p-1 text-right">P&amp;L</div>
    <div class="md:tooltip w-24 shrink-0 grow p-1 text-right">
      MWRR p.a.
      <div
        class="tooltip-text after:border-l-grey-800 right-[80%] top-0 w-60 font-normal after:left-full after:top-1/4 after:-mt-[4px]"
      >
        Money-Weighted Return Rate per annum
      </div>
    </div>
  </div>
  {% for account in accounts["accounts"] %}
    {% include "performance/account-view.jinja" %}
  {% endfor %}
  <div
    id="accounts-total"
    class="border-t-grey-200 sticky bottom-0 flex w-full min-w-[650px] border-t bg-white font-bold"
  >
    <div class="w-28 shrink-0 grow-[4] truncate p-1">Total</div>
    <div class="w-28 shrink-0 grow p-1 text-right">
      {{ accounts["initial"] | money }}
    </div>
    <div class="w-28 shrink-0 grow p-1 text-right">
      {{ accounts["cash_flow"] | money }}
    </div>
    <div class="w-28 shrink-0 grow p-1 text-right">
      {{ accounts["end"] | money }}
    </div>
    <div
      class="text-{{ accounts["profit"] | pnl_color }} w-28 shrink-0 grow p-1 text-right"
    >
      {{ accounts["profit"] | money }}
    </div>
    <div
      class="text-{{ accounts["mwrr"] | pnl_color }} w-24 shrink-0 grow p-1 text-right"
    >
      {{ accounts["mwrr"] | percent }}
    </div>
  </div>
</div>
