[project]
name = "{{ config.project_name }}"
version = "0.1.0"
description = "{{ config.description }}"
authors = []
requires-python = "{{ config.python_version }}"
dependencies = [
    "fastmcp>=2.3.0",
    "mcp>=1.0.0",
    "pydantic>=2.0.0",
    "rich>=13.0.0",
    "httpx>=0.27.0",
    "uvicorn>=0.30.0",
]

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project.scripts]
{{ config.project_name }} = "{{ config.package_name }}.server:main"
